<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.drsystem.controller.UserManageController">

    <Label text="User Management" style="-fx-font-size: 24px;" />

    <!-- TableView to display user records -->
    <TableView fx:id="userTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="roleColumn" text="Role" />
            <TableColumn fx:id="mobileColumn" text="Mobile" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Edit" onAction="#editUser" />
        <Button text="Delete" onAction="#deleteUser" />
    </HBox>
</VBox>
