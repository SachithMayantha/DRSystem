<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.drsystem.controller.DashboardController">
    <HBox alignment="CENTER">
        <Button text="Logout" onAction="#logout" />
    </HBox>

    <Label text="Welcome to the Disaster Response System!" style="-fx-font-size: 24px;"/>
    <Button text="Report Disaster" onAction="#reportDisaster" />
    <Button text="View Disasters" onAction="#viewUserDisasters" />
    <Button text="Frequently Asked Questions" onAction="#viewFAQ"/>
</VBox>
